<% unless @comment.nil? -%>
# <%= @comment %>
<% end -%>
<% if @daemon_list.is_a?(Array) -%>
<% @daemon_list.each do |daemon| -%>
<%= daemon -%> : <% if @client_list.is_a?(Array) -%>
<%= @client_list.join(' ') -%>
<% else -%>
<%= @client_list -%>
<% end -%>
<% if @actions.is_a?(Array) -%>
<% @actions.each do |action| -%>
 : <%= action -%>
<% end %>
<% else -%>
 : <%= @actions %>
<% end -%>
<% end -%>
<% else -%>
<%= @daemon_list -%> : <% if @client_list.is_a?(Array) -%>
<%= @client_list.join(' ') -%>
<% else -%>
<%= @client_list -%>
<% end -%>
<% if @actions.is_a?(Array) -%>
<% @actions.each do |action| -%>
 : <%= action -%>
<% end -%>
<% else -%>
 : <%= @actions -%>
<% end -%>
<% end -%>
